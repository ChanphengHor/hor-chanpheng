{
  "hosting": {
    "target": "horchanpheng",
    "public": "home",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/pos_system",
        "destination": "/pos/pos-demo.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "errorPages": {
      "404": "/404.html"
    }
  },
  "headers": [
  {
    "source": "**/*.@(css|js|png|jpg|jpeg|gif|svg|ico)",
    "headers": [
      {
        "key": "Cache-Control",
        "value": "public, max-age=31536000"
      }
    ]
  }],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}