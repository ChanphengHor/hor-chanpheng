{
  "hosting": {
    "target": "horchanpheng",
    "public": "home",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/pos_system",
        "destination": "/pos/pos-demo.html"
      }
    ],
    "errorPages": {
      "404": "/404.html"
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  }
}